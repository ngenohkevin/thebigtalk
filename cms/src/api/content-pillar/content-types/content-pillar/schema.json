{
  "kind": "collectionType",
  "collectionName": "content_pillars",
  "info": {
    "singularName": "content-pillar",
    "pluralName": "content-pillars",
    "displayName": "Content Pillar",
    "description": "What We Do - Content pillars explaining the organization's focus areas"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
