{
  "kind": "singleType",
  "collectionName": "site_settings",
  "info": {
    "singularName": "site-setting",
    "pluralName": "site-settings",
    "displayName": "Site Settings",
    "description": "Global site settings and configuration"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "siteName": {
      "type": "string",
      "default": "The Big Talk"
    },
    "tagline": {
      "type": "string",
      "maxLength": 200
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "mission": {
      "type": "richtext"
    },
    "vision": {
      "type": "richtext"
    },
    "about": {
      "type": "richtext"
    },
    "tiktokUrl": {
      "type": "string"
    },
    "instagramUrl": {
      "type": "string"
    },
    "twitterUrl": {
      "type": "string"
    },
    "facebookUrl": {
      "type": "string"
    },
    "youtubeUrl": {
      "type": "string"
    },
    "watchOurStoryUrl": {
      "type": "string",
      "regex": "^(https?:\\/\\/)?(www\\.)?(youtube\\.com|youtu\\.be)\\/.+$"
    },
    "watchOurStoryTitle": {
      "type": "string",
      "default": "Watch Our Story"
    },
    "contactEmail": {
      "type": "email"
    },
    "contactPhone": {
      "type": "string",
      "maxLength": 50
    },
    "contactAddress": {
      "type": "string",
      "maxLength": 200
    },
    "contactCity": {
      "type": "string",
      "maxLength": 100
    },
    "contactCountry": {
      "type": "string",
      "maxLength": 100,
      "default": "Kenya"
    }
  }
}
